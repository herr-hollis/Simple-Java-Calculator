    private void addbActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        double a,b,c;
        a=Double.parseDouble(textA.getText());
        b=Double.parseDouble(textB.getText());
        c=a+b;
        System.out.print(c);
        textC.setText(String.valueOf(c));
        
    }                                    

