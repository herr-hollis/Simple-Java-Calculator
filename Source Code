    private void subbActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        double d,e,f;
        d=Double.parseDouble(textD.getText());
        e=Double.parseDouble(textE.getText());
        f=d-e;
        System.out.print(f);
        textF.setText(String.valueOf(f));
    }                                    

    private void textFActionPerformed(java.awt.event.ActionEvent evt) {                                      
