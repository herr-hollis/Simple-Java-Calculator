    private void mulbActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        double g,h,i;
        g=Double.parseDouble(textG.getText());
        h=Double.parseDouble(textH.getText());
        i=g*h;
        System.out.print(i);
        textI.setText(String.valueOf(i));
        
    }                                    

    private void divbActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        double j,k,l;
        j=Double.parseDouble(textJ.getText());
        k=Double.parseDouble(textK.getText());
        l=j/k;
        System.out.print(l);
        textL.setText(String.valueOf(l));
    }                                    

